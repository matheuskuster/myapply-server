{
  "compilerOptions": {
      "target": "es2020",
      "module": "es2020",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "strictPropertyInitialization": false,
      "baseUrl": "./src",
      "allowJs": true,
      "paths": {
          "@modules/*": [
              "modules/*"
          ],
          "@config/*": [
              "config/*"
          ],
          "@shared/*": [
              "shared/*"
          ]
      },
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true
  }
}
